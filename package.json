{
  "name": "react-native-wifi-reborn",
  "version": "5.0.0",
  "description": "A react-native implementation for viewing and connecting to Wifi networks on Android and iOS devices. Enhanced for IoT device support.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "source": "src/index.ts",
  "react-native": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "prepare": "npm run clean && npm run build",
    "lint": "eslint src/ --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No test specified\" && exit 0"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "*.podspec",
    "app.plugin.js",
    "plugin"
  ],
  "keywords": [
    "react",
    "react-native",
    "android",
    "ios",
    "wifi",
    "connect",
    "iot",
    "turbomodule"
  ],
  "author": "unreal-work",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unreal-work/react-native-wifi-reborn.git"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.71.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "typescript": "^5.0.0"
  },
  "bugs": {
    "url": "https://github.com/unreal-work/react-native-wifi-reborn/issues"
  },
  "homepage": "https://github.com/unreal-work/react-native-wifi-reborn#readme",
  "license": "ISC",
  "codegenConfig": {
    "name": "RNWifiSpec",
